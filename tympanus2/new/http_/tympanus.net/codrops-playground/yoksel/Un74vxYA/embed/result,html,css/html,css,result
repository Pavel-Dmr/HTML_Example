          class=&quot;text--line&quot;
          &gt;
      Text
    &lt;/text&gt;    
  &lt;/symbol&gt;

  &lt;!-- Clippath  with text --&gt;
  &lt;clippath id=&quot;cp-text&quot;&gt;
    &lt;text text-anchor=&quot;middle&quot;
          x=&quot;50%&quot;
          y=&quot;50%&quot;
          dy=&quot;.35em&quot;
          class=&quot;text--line&quot;
          &gt;
      Text
    &lt;/text&gt;
  &lt;/clippath&gt;

  &lt;!-- Group for shadow --&gt;
  &lt;g clip-path=&quot;url(#cp-text)&quot; class=&quot;shadow&quot;&gt;
    &lt;rect
          width=&quot;100%&quot;
          height=&quot;100%&quot;         
          class=&quot;anim-shape anim-shape--shadow&quot;
          &gt;&lt;/rect&gt;
  &lt;/g&gt;

  &lt;!-- Group with clippath for text--&gt;
  &lt;g clip-path=&quot;url(#cp-text)&quot; class=&quot;colortext&quot;&gt;
    &lt;!-- Animated shapes inside text --&gt;
    &lt;rect
          width=&quot;100%&quot;
          height=&quot;100%&quot;         
          class=&quot;anim-shape&quot;
